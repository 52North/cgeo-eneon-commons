          'description' => t('An ENEON Issue'),
          'has_title' => TRUE,
          'title_label' => t('Issue'),
//           'locked' => TRUE,
      ),

      ENEON_BUNDLE_NETWORK => array (
          'name' => t('ENEON Network'),
          'base' => ENEON_BUNDLE_NETWORK,
          'description' => t('An ENEON Network'),
          'has_title' => TRUE,
          'title_label' => t('Network'),
          'locked' => TRUE,
      )
  );
}

